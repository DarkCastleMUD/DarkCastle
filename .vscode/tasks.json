{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build src using 32 threads",
            "type": "shell",
            "command": "scons -C src -c; scons -C src -j 32 && if pidof dcastle; then killall -HUP dcastle; fi",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/src/"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": "build"
        },
        {
            "label": "build debug src using 32 threads",
            "type": "shell",
            "command": "scons debug=1 -C src -j 128 && if pidof dcastle; then killall -HUP dcastle; fi",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/src/"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": {
                "kind": "build",
            }
        },
        {
            "label": "scons -C src -j 128",
            "type": "shell",
            "command": "scons -C src -c && scons -C src -j 128 && if pidof dcastle; then killall -HUP dcastle; fi",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/src/"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": "build"
        },
        {
            "label": "scons debug=1 -C src -j 128",
            "type": "shell",
            "command": "scons debug=1 -C src -j 128 && if pidof dcastle; then killall -HUP dcastle; fi",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/src/"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}