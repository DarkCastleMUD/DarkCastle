    "version": "2.0.0",
    "tasks": [
        {
            "label": "build src using 32 threads",
            "type": "shell",
            "command": "cmake -S src -B build && make -C build -j 32 && if pidof dcastle; then rebootdc.sh; fi",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": "build"
        },
        {
            "label": "build debug src using 32 threads",
            "type": "shell",
            "command": "cmake -S src -B build && make -C build -j 32 && if pidof dcastle; then rebootdc.sh; fi",
