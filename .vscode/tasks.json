{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Clean release with debug info build",
            "type": "shell",
            "command": "rm -rf build && cmake -S src -B build -DCMAKE_BUILD_TYPE=RelWithDebInfo -DCMAKE_CXX_COMPILER=\"/usr/bin/g++-14\" -DCMAKE_EXE_LINKER_FLAGS=\"-fuse-ld=mold\" -DCMAKE_SHARED_LINKER_FLAGS=\"-fuse-ld=mold\" -GNinja && ninja -C build && pidof dcastle && rebootdc.sh",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": "build"
        },
        {
            "label": "Clean debug build",
            "type": "shell",
            "command": "rm -rf build && cmake -S src -B build -DCMAKE_BUILD_TYPE=Debug -DCMAKE_CXX_COMPILER=\"/usr/bin/g++-14\" -DCMAKE_EXE_LINKER_FLAGS=\"-fuse-ld=mold\" -DCMAKE_SHARED_LINKER_FLAGS=\"-fuse-ld=mold\" -GNinja && ninja -C build && pidof dcastle && rebootdc.sh",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": "build"
        },
        {
            "label": "rebuild",
            "type": "shell",
            "command": "test \"$(ninja -n -C build|tail -1)\" != \"ninja: no work to do.\" && { ninja -C build && pidof dcastle && rebootdc.sh; } || true",
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "absolute"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "message": 4
                }
            },
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}